{% extends "base.html.twig" %}
{% block title %}
	Add Post
{% endblock %}

{% block body %}

	{{form_start(form)}}

	<div>{{form_errors(form)}}</div>
	<div>
		{{form_label(form.title, 'Enter the title')}}
	</div>

	<div>
		{{form_widget(form.title)}}
	</div>

	<div>
		{{form_label(form.content, 'Enter the content')}}
	</div>

	<div>
		{{form_widget(form.content)}}
	</div>

	<div>
		<button type="submit">Save</button>
	</div>

	{{form_end(form)}}

{% endblock %}
